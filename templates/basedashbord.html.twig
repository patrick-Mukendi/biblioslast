
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>Biblios - {% block title %}{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            <style>
               .body{
                    content: center;
                    width: 100vh;
                }
                .sidebottom .hr{
                  width: 25;
                }
                
            </style>
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body id="page-top">
        <!-- Navigation-->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top" id="mainNav">
            <div class="container px-4">
                <a class="navbar-brand" href="{{ path('app_main') }}">Biblios</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" href="{{ path('app_admin_book_view') }}">Catalogue</a></li>
                        {% if app.user is null %}
                        <li class="nav-item"><a class="nav-link" href="{{ path('app_login') }}">Se connecter</a></li>
                        {% endif %}
                        {% if is_granted('IS_AUTHENTICATED') %}
                            <li class="nav-item"><a class="nav-link" href="{{ path('app_admin_manager') }}">Administration</a></li>
                            <li class="nav-item"><a class="nav-link" href="{{ path('app_logout') }}">Deconnexion</a></li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>
        <div class="admin-container">
          <aside class="sidebar navbar-expand-lg  bg-dark fixed-top">
            <h5>Admin Panel</h5>
            <nav>
            
              <div class="col ">
                  <div class="col">
                          <p>Author</p>
                          <a href="{{ path('app_admin_author') }}" class="btn btn-primary ">Add</a>
                          <a href="{{ path('app_admin_author_view') }}" class="btn btn-primary">View</a>
                          <hr>
                  </div>
                  <div class="col">
                          <p>Editor</p>
                          <a href="{{ path('app_admin_editor_new') }}" class="btn btn-primary">Add</a>
                          <a href="{{ path('app_admin_editor_view') }}" class="btn btn-primary">View</a>
                          <hr>
                  </div>
                  <div class="col">
                          <p>Book</p>
                          <a href="{{ path('app_admin_book_new') }}" class="btn btn-primary">Add</a>
                          <a href="{{ path('app_admin_book_view') }}" class="btn btn-primary">View</a>
                          <hr>
                          <li class="nav-item"><a class="nav-link" href="{{ path('app_register') }}">* Ajouter Utilisateur</a></li>
                  </div>
                  <div class="sidebottom fixed-bottom m-2">
                    <p> {{app.user.firstname}} {{app.user.lastname}}</p>
                  </div>
              </div>
          </nav>
        </aside>

          <main class="main-content">
            
            <section class="content">
              {% block body %} 

              {% endblock %}
            </section>
          </main>
        </div>

        <!-- Footer-->
        <footer class="py-5 bg-dark" id="footer">
            <div class="container px-4"><p class="m-0 text-center text-white">Copyright &copy; Biblios</p></div>
        </footer>
    </body>
</html>