{% extends 'base.html.twig' %}

{% block title %}Admin Author {% endblock %}
{% block stylesheets %}
 <style>
    label.required:before {
         content: "* ";
    }
</style>
{% endblock %}

{% block body %}
 
        <section id="bodyall">
            <div class="container px-4">
                <div class="row gx-4 justify-content-center">
                    <div class="col-lg-5">
                        <h1>Detail Editeur: </h1>
                        {% if editor is not null %}
                            <div class="card mb-1 m-auto">
                                <div class="card-body">
                                    <div class="card-title d-flex justify-content-between">
                                        <h4 class="mb-1">{{ editor.name }}</h4>
                                        <small class="text-muted">Identifiant : {{ editor.id }}</small>
                                    </div>
                                </div>
                            </div> 
                            <div class="btnRetour">
                                <a href="{{ path('app_admin_editor_view') }}" class="btn btn-primary">Retour</a>
                            </div>
                        {% else %}
                            <div>Auteur non trouv√©</div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </section>
{% endblock %}
