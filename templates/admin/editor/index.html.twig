{% extends 'basedashbord.html.twig' %}

{% block title %}Editor{% endblock %}
{% set action = app.current_route == 'app_admin_editor_new' ? 'Ajouter':'Modifier'%}
{% block body %}
<style>
    label.required:before {
         content: "* ";
    }
</style>
        <section class="about">
            <div class="container px-5">
                <div class="row gx-4 justify-content-center">
                    <div class="col-lg-5">
                        <h1>{{action}} Editor</h1>
                        {{ form_start(form) }}
                        {{ form_widget(form) }}
                            <button type="submit" class="btn btn-primary">{{action}}</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </section>
{% endblock %}
