{% extends 'base.html.twig' %}

{% block title %}Livre {% endblock %}

{% block body %}
<style>
        label.required:before {
            content: "* ";
        }
</style>
     <section id="about">
        <div class="container px-4">
            <div class="row gx-4 justify-content-center">
                <div class="col-lg-5">
                    <h1>Livre</h1>
                    <ul class="list-group list-group-flush"> 
                    {% for items in book %}
                        <div class="card mb-1">
                            <div class="card-body">
                                <div class="card-title d-flex justify-content-between">
                                    <h4 class="mb-1">{{ items.title }}</h4>
                                    <small class="text-muted">Identifiant: {{items.id}}</small>
                                    <div>
                                        <button type="button"><a href="{{ path('app_admin_book_show', {id: items.id}) }}" >
                                            View
                                        </a>
                                        </button>
                                    </div>
                                    <div>
                                        <button type="button"><a href="{{ path('app_admin_book_edit', {id: items.id}) }}">
                                            Edit
                                        </a></button>
                                    </div>
                                    
                                    
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <li>Pas de livre</li>
                    {% endfor %}
                    </ul>
                </div>
            </div>
         </div>
{% endblock %}
