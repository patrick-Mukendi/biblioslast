{% extends 'base.html.twig' %}

{% block title %}Admin Book {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 50px; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .btnRetour {width: 50px; margin-left:20px}
</style>

<div class="example-wrapper">
    <h1>Detail Book: </h1>
    {% if book is not null %}
        <div class="card mb-1 m-auto">
            <div class="card-body">
                <div class="card-title d-flex justify-content-between">
                    <h4 class="mb-1">{{ book.title }}</h4>
                    <small class="text-muted">Identifiant : {{ book.id }}</small>
                </div>
                <div class="d-flex justify-content-between card-text">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">isbn : {{ book.isbn }}</li>
                        <li class="list-group-item">Couverture : {{ book.cover }}</li>
                        <li class="list-group-item">Editeé le : {{ book.editedAt |date('d M Y') }}</li>
                        <li class="list-group-item">Description : {{ book.plot }}</li>
                        <li class="list-group-item">Page : {{ book.pageNumber }}</li>
                        <li class="list-group-item">Disponibilé : {{ book.status.value }}</li>
                        <li class="list-group-item">Auteur : {{ book.authors }}</li>
                        <li class="list-group-item">Editeur : {{ book.editor }}</li>
                    </ul>
                </div>
            </div>
          
            
        </div> 
         <div class="btnRetour">
             <a href="{{ path('app_admin_book_view') }}" class="btn btn-primary">Retour</a>
        </div>
    {% else %}
        <div>Auteur non trouvé</div>
    {% endif %}
</div>
{% endblock %}
