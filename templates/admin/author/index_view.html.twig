{% extends 'basedashbord.html.twig' %}

{% block title %}Auteur Add{% endblock %}

{% block body %}
<style>
        label.required:before {
            content: "* ";
        }
</style>
     <section id="about">
        <div class="container px-4">
            <div class="row gx-4 justify-content-center">
                <div class="col-lg-5">
                    <h1>Liste Auteurs</h1>
                <ul class="list-group list-group-flush"> 
                    {% for items in author %}
                        <div class="card mb-1">
                            <div class="card-body">
                                <div class="card-title d-flex justify-content-between">
                                    <h4 class="mb-1">{{ items.name }}</h4>
                                    <small class="text-muted">Identifiant: {{items.id}}</small>
                                     <a class="btn btn-outline-dark mt-auto" href="{{ path('app_admin_author_show', {id: items.id}) }}" class="stretched-link link-dark">Show</a>
                                    <a class="btn btn-outline-dark mt-auto" href="{{ path('app_admin_author_edit', {id: items.id}) }}" class="stretched-link link-dark">Edit</a>
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <li>Pas d'Auteur</li>
                    {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
